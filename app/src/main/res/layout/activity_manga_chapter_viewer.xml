<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MangaChapterViewerActivity"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/grey"
    android:id="@+id/mainImageViewer">

    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ic_launcher_background"
        android:layout_alignParentTop="true" />

    <RelativeLayout
        android:id="@+id/progressLeftToRight"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:background="@drawable/rounded_corners">

        <TextView
            android:id="@+id/chapterStartLeftToRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="20sp"/>

        <SeekBar
            android:id="@+id/seekBarLeftToRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/chapterStartLeftToRight"
            android:layout_alignEnd="@id/chapterEndLeftToRight"
            android:layout_centerInParent="true"
            android:layout_marginBottom="30dp"
            android:backgroundTint="#fff"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:progressTint="#fff"
            android:thumbTint="#fff" />

        <TextView
            android:id="@+id/chapterEndLeftToRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:text="43"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/progressRightToLeft"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:background="@drawable/rounded_corners">

        <TextView
            android:id="@+id/chapterStartRightToLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:text="43"
            android:textColor="@color/white"
            android:textSize="20sp"/>

        <SeekBar
            android:id="@+id/seekBarRightToLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/chapterEndRightToLeft"
            android:layout_alignEnd="@id/chapterStartRightToLeft"
            android:layout_centerInParent="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="30dp"
            android:backgroundTint="#fff"
            android:progressTint="#fff"
            android:thumbTint="#fff"
            android:rotationY="180"/>

        <TextView
            android:id="@+id/chapterEndRightToLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="20sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/optionBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:background="@drawable/background_"
        android:visibility="visible">

        <ImageButton
            android:id="@+id/btnBack"
            android:background="@android:color/transparent"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/baseline_keyboard_arrow_left" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="7dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_toStartOf="@+id/btnLayout"
            android:layout_toEndOf="@+id/btnBack"
            android:text="title"/>

        <LinearLayout
            android:id="@+id/btnLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true">

            <ImageButton
                android:id="@+id/saveChapter"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:src="@drawable/baseline_save_alt_24"/>

            <ToggleButton
                android:id="@+id/LeftToRightBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textOn="LTR"
                android:textOff="RTL"
                android:background="@android:color/transparent"
                android:textColor="@color/white"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>